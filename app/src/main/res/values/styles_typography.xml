<resources>
    <!-- Text -->
    <style name="TextAppearance.H" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.H1" parent="TextAppearance.H">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextAppearance.H2" parent="TextAppearance.H">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.H3" parent="TextAppearance.H">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.H3.Inverse" parent="TextAppearance.H3">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextAppearance.H3.GreyPale" parent="TextAppearance.H2">
        <item name="android:textColor">@color/greyPale</item>
    </style>

    <style name="TextAppearance.H4" parent="TextAppearance.H">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.H5" parent="TextAppearance.H">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Body" parent="android:style/TextAppearance">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Body1" parent="TextAppearance.Body">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Body2" parent="TextAppearance.Body">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Body3" parent="TextAppearance.Body">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Body4" parent="TextAppearance.Body">
        <item name="android:textSize">16sp</item>
    </style>
</resources>
